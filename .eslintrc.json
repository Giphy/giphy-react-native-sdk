{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "@react-native-community",
    "prettier"
  ],
  "plugins": [
    "import"
  ],
  "rules": {
    "import/first": "warn",
    "import/newline-after-import": "warn",
    "import/no-duplicates": "warn",
    "prettier/prettier": [
      "error",
      {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false,
        "semi": false
      }
    ],
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error"
    ]
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}
